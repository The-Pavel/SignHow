<div class="tabs">
  <a class="tab" data-toggle="tab" href="#home">
    <h3><%=@user.favorites.count%></h3>
    <p> Favorites</p>
  </a>
  <a class="tab" data-toggle="tab" href="#menu1">
    <h3><%=@user.gifs.count%></h3>
    <p> My Signs</p>
  </a>
  <a class="tab" data-toggle="tab" href="#menu2">
    <h3><i class="fa fa-user"></i></h3>
    <p> Profile</p>
  </a>
  <a class="tab" data-toggle="tab" href="#menu3">
    <h3><i class="fa fa-star"></i></h3>
    <p> Premium</p>
  </a>
</div>

<div class="tab-content">
  <div id="home" class="tab-pane fade in active">
    <div class="gif-tabs">
      <div class="row">
        <br>
        <h4>Favorite Signs</h4>
        <% @favorites.each do |favorite| %>
        <div class="col col-xs-12 col-sm-6 col-md-5 col-lg-4">
          <%= link_to gif_path(favorite) do %>
          <div class="card">
            <%= cl_image_tag favorite.file, class: "gif" %>
            <% end %>
            <h4 class="word"><b><%= favorite.title %></b></h4>
            <br>
            <p class="language"><%= favorite.language %></p>
            <% favorite.tag_list.each do |tag| %>

            <div class="tag"><%= link_to tag, tagged_path(tag: tag) %></div>

            <% end %>

          </div>

          <div class="votes">
            <% if user_signed_in? %>
            <% if current_user.voted_up_on? favorite %>
            <div>
              <%= favorite.get_upvotes.size %>
              <i class="fas fa-thumbs-up upvotes-sm"></i>
            </div>
            <div>
              <%= favorite.get_downvotes.size %>
              <%= link_to downvote_path(favorite),  method: :post do %>
              <i class="fas fa-thumbs-down downvotes-sm"></i>
              <% end %>
            </div>
            <% elsif current_user.voted_down_on? favorite %>
            <div>
              <%= favorite.get_upvotes.size %>
              <%= link_to upvote_path(favorite),  method: :post do %>
              <i class="fas fa-thumbs-up upvotes-sm"></i>
              <% end %>
            </div>
            <div>
              <%= favorite.get_downvotes.size %>
              <i class="fas fa-thumbs-down downvotes-sm"></i>

            </div>
            <% else  %>
            <div>
              <%= favorite.get_upvotes.size %>
              <%= link_to upvote_path(favorite),  method: :post do %>
              <i class="fas fa-thumbs-up upvotes-sm"></i>
              <% end %>
            </div>
            <div>
              <%= favorite.get_downvotes.size %>
              <%= link_to downvote_path(favorite),  method: :post do %>
              <i class="fas fa-thumbs-down downvotes-sm"></i>
              <% end %>
            </div>
            <% end %>
            <% end %>
          </div>

        </div>
        <% end %>
      </div>
    </div>
  </div>

  <div id="menu1" class="tab-pane fade">
    <div class="gif-tabs">
      <div class="row">
        <br>
        <h4>My Signs</h4>
        <% @gifs.each do |gif| %>
        <div class="col col-xs-12 col-sm-6 col-md-5 col-lg-4">
          <%= link_to gif_path(gif) do %>
          <div class="card">
            <%= cl_image_tag gif.file, class: "gif" %>
            <h4 class="word"><b><%= gif.title %></b></h4>
            <br>
            <p class="language"><%= gif.language %></p>
            <% gif.tag_list.each do |tag| %>
            <div class="tag"><%= tag %></div>
            <% end %>
          </div>
          <div class="votes">
            <% if user_signed_in? %>
            <% if current_user.voted_up_on? gif %>
            <div>
              <%= gif.get_upvotes.size %>
              <i class="fas fa-thumbs-up upvotes-sm"></i>
            </div>
            <div>
              <%= gif.get_downvotes.size %>
              <%= link_to downvote_path(gif),  method: :post do %>
              <i class="fas fa-thumbs-down downvotes-sm"></i>
              <% end %>
            </div>
            <% elsif current_user.voted_down_on? gif %>
            <div>
              <%= gif.get_upvotes.size %>
              <%= link_to upvote_path(gif),  method: :post do %>
              <i class="fas fa-thumbs-up upvotes-sm"></i>
              <% end %>
            </div>
            <div>
              <%= gif.get_downvotes.size %>
              <i class="fas fa-thumbs-down downvotes-sm"></i>

            </div>
            <% else  %>
            <div>
              <%= gif.get_upvotes.size %>
              <%= link_to upvote_path(gif),  method: :post do %>
              <i class="fas fa-thumbs-up upvotes-sm"></i>
              <% end %>
            </div>
            <div>
              <%= gif.get_downvotes.size %>
              <%= link_to downvote_path(gif),  method: :post do %>
              <i class="fas fa-thumbs-down downvotes-sm"></i>
              <% end %>
            </div>
            <% end %>
            <% end %>
          </div>
          <% end %>
          <%= link_to "Edit GIF", edit_gif_path(gif) %>
          <%= link_to "Delete GIF", gif_path(gif), method: :delete, data: { confirm: 'Are you sure you want to delete this gif?' } %>
        </div>
        <% end %>
      </div>
    </div>
  </div>

<div id="menu2" class="tab-pane fade">
