<br>
<div class="tabs">
  <a class="tab active" href="#">
    <h3><%=@user.favorites.count%></h3>
    <p> Favorites</p>
  </a>
  <a class="tab" href="#">
    <h3><%=@user.gifs.count%></h3>
    <p> My GIFs</p>
  </a>
  <a class="tab" href="#">
    <h3></h3>
    <p> Profile</p>
  </a>
  <a class="tab" href="#">
    <h3></h3>
    <p> Upgrade</p>
  </a>
</div>

<div class="gif-tabs">

  <br>
  <h4>My favorite gifs</h4>
  <% @favorites.each do |favorite| %>
  <%= favorite.title %>
  <%= cl_image_tag favorite.file %>
  <% end %>

  <br>

  <h4>Created gifs</h4>
  <% @user.gifs.each do |gif| %>
  <h5><%= gif.title %></h5>
  <li><%= gif.language %></li>
  <li><%= cl_image_tag gif.file %></li>
  <%= link_to "Edit GIF", edit_gif_path(gif) %>
  <%= link_to "Delete GIF", gif_path(gif), method: :delete, data: { confirm: 'Are you sure you want to delete this gif?' } %>
  <% end %>

</div>
