<div class="container">
  <div class="row">
    <div class="col col-xs-12 col-sm-4 col-md-4 col-sm-offset-4">
      <div class="search">
        <%= form_tag search_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
          placeholder: "Search by Word or Phrase"
          %>
        </div>

    </div>
  </div>
</div>

<br>
<br>
<div class="container">
  <div class="row">
    <% @gifs.each do |gif| %>
    <div class="col col-xs-12 col-sm-4 col-md-4">

      <div class="card">

        <%= cl_image_tag gif.file, class: "gif" %>
          <h4 class="word"><b><%= gif.title %></b></h4>
          <br>
          <p class="language"><%= gif.language %></p>
          <p class="tag">#tags</p>
      </div>
    </div>
    <% end %>
  </div>
</div>
