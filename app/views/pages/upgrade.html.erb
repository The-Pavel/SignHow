    <div class="demo-card">

    <h4>Individual</h4>
    <h5>Just you</h5>

      <%= form_tag charges_path do %>
      <article>
        <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
        <% end %>
        <label class="amount">
          <span>
            <ul>
              $10.00 billed monthly
            </ul>
            <ul>
              $100 billed annually (save $20)
            </ul>
          </span>
        </label>
      </article>

      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
      data-key="<%= Rails.configuration.stripe[:publishable_key] %>" ></script>
      <%= hidden_field_tag 'stripeToken' %>
      <%= hidden_field_tag 'amount', 800 %>
      <%= hidden_field_tag 'stripeEmail' %>
      <% end %>

    <br>

    </div>

