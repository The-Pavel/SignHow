<div class="login-container">
  <div class="login-row">
    <div class="col col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">

      <h2>Log in</h2>

      <div class="login-page">
        <!-- link-to path do -->
        <%= link_to user_facebook_omniauth_authorize_path, :class => 'fb' do%>
        <i class="fa fa-facebook"></i>
        Sign in with Facebook
        <% end %>


        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <hr class="hr-with-text">
          <!-- <div class="or"><h3>OR</h3></div> -->
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>


          <%= f.button :submit, "Log in", :class => 'addsign'%>
        <% end %>

          <div class="multi-links">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
