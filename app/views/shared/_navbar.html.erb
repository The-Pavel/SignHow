<div class="navbar-signhow">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-signhow-brand" do %>
    <%= image_tag "Logo.svg", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-signhow-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "How it Works", how_it_works_path, class: "about" %>
      <%= link_to "About", about_path, class: "about" %>
      <%= link_to "Dashboard", dashboard_path(current_user), class: "dashboard" %>

      <%= link_to "Add a Sign", new_gif_path, class: "addsign" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-signhow-item">
        <div class="dropdown">
        <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-signhow-dropdown-menu">
            <li><% if current_user.admin %>
              <%= link_to admin_root_path do %>
              <i class="fa fa-dashboard"></i> <%= t(".profile", default: "Admin") %>
              <% end %>
              <% end %>
            </li>
            <li><%= link_to edit_user_registration_path(current_user) do %>
                <i class="fa fa-cog"></i> <%= t(".profile", default: "Settings") %>
              <% end %>
            </li>
            <li><%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to "How it Works", how_it_works_path, class: "about" %>
      <%= link_to "About", about_path, class: "about"%>
      <%= link_to t(".sign_up", default: "Sign Up"), new_user_registration_path, class: "signup" %>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "login" %>
      <%= link_to t(".sign_up", default: "Add a Sign"), new_user_session_path, class: "addsign" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->

  <div class="navbar-signhow-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-signhow-dropdown-menu">
      <% if user_signed_in? %>
        <li>
          <% if current_user.admin %>
            <%= link_to "Admin", admin_root_path, class: "navbar-signhow-item navbar-signhow-link" %></li>
          <% end %>
        </li>
        <li><%= link_to "About", about_path, class: "navbar-signhow-item navbar-signhow-link"%></li>
        <li><%= link_to "Dashboard", dashboard_path(current_user), class: "navbar-signhow-item navbar-signhow-link" %></li>
        <li><%= link_to "Add a Sign", new_gif_path, class: "navbar-signhow-item navbar-signhow-link" %></li>

        <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <%= t(".sign_out", default: "Log out") %>
            <% end %>
        </li>
      <% else %>
        <li><%= link_to "About", about_path, class: "navbar-signhow-item navbar-signhow-link"%></li>
        <li><%= link_to "Log-in", new_user_session_path, class: "navbar-signhow-item navbar-signhow-link" %></li>
        <li><%= link_to "Sign-up", new_user_registration_path, class: "navbar-signhow-item navbar-signhow-link"%></li>
      <% end %>

      </ul>
    </div>
  </div>
</div>
