<% if current_user.voted_up_on? @gif %>
<i class="fas fa-thumbs-up fa-lg upvotes"></i>
<%= @gif.get_upvotes.size %>

<%= link_to downvote_path(@gif), class: "downvotes", method: :post, remote: true do %>
    <i class="fas fa-thumbs-down fa-lg"></i>
    <% end %>
    <%= @gif.get_downvotes.size %>
<% elsif current_user.voted_down_on? @gif %>
  <%= link_to upvote_path(@gif), class: "upvotes", method: :post, remote: true do %>

  <i class="fas fa-thumbs-up fa-lg"></i>
    <% end %>
    <%= @gif.get_upvotes.size %>
    <i class="fas fa-thumbs-down fa-lg downvotes"></i>
    <%= @gif.get_downvotes.size %>

<% else  %>
  <%= link_to upvote_path(@gif), class: "upvotes", method: :post, remote: true do %>
    <i class="fas fa-thumbs-up fa-lg"></i>
    <% end %>
    <%= @gif.get_upvotes.size %>
  <%= link_to downvote_path(@gif), class: "downvotes", method: :post, remote: true do %>
    <i class="fas fa-thumbs-down fa-lg"></i>
    <% end %>
    <%= @gif.get_downvotes.size %>

<% end %>
