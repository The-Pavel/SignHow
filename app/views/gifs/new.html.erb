<div class="container">
  <div class="newgifs-row">
    <div class="col col-xs-12 col-sm-4 col-md-4 col-sm-offset-4">

      <h4><strong>Add a new gif</strong></h4>

      <div class="newgifs">
        <%= simple_form_for(@gif) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :title, required: true, autofocus: true %>
          <%= f.input :language, collection: [ "English", "Chinese", "Swahili", "German", "Russian", "Portuguese" ] %>
          <%= f.input :tag_list %>
          <%= f.file_field :file, id: "avatar-upload" %>
          <div class="form-group">
            <img id="img_prev" width=300 height=300 src="#" alt="your image" class="img-thumbnail hidden"/> <br/>
            <!-- <span class="btn btn-default btn-file"> -->
            <!-- </span> -->
          <%= f.input :file_cache, as: :hidden %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Submit" %>
          </div>
          <!--  Drag & Drop -->
         <!--  <div id="dropbox"><img src="https://image.flaticon.com/icons/svg/337/337936.svg" alt=""></div>
          <!-- end -->
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
