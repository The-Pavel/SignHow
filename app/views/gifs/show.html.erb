
<div class="container">
  <div class="search">
    <div class="search-1">
      <%= form_tag search_path, method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
        placeholder: "Search by Word or Phrase"
      %>
    </div>
   <!--  </div> -->
    <div class="search-2">
      <%= select_tag :query_language, options_for_select(Gif::LANGUAGES) %>
    </div>
    <div class="search-3">

      <%= button_tag type: 'submit', class: "searchbutton" do %>
          <i class="fa fa-search" style = "font-size: 24px; margin: 0px; padding-top: -20px;"></i>
        <% end %>
      <% end %>


    </div>
  </div>




<section>



  <div class="container-big-card">
    <div class="big-card">
      <%= cl_image_tag @gif.file, class: "big-card-gif" %>
      <h4 class="big-card-word"><b><%= @gif.title %></b></h4>
      <br>
      <p class="big-card-language"><%= @gif.language %></p>

      <p class="btn-white"> <%= @gif.get_upvotes.size %></p>
      <p class="btn-white"> <%= @gif.get_downvotes.size %></p>

      <% if user_signed_in? %>
        <% if current_user.voted_up_on? @gif %>
          <%= link_to downvote_path(@gif), class: "downvotes", method: :post do %>
            <i class="fas fa-thumbs-down fa-2x"></i>
            <% end %>
        <% elsif current_user.voted_down_on? @gif %>
          <%= link_to upvote_path(@gif), class: "upvotes", method: :post do %>
          <%= @gif.get_upvotes.size %>
            <i class="fas fa-thumbs-up fa-2x"></i>
            <% end %>
        <% else  %>
          <%= link_to upvote_path(@gif), class: "upvotes", method: :post do %>
            <a><i class="fas fa-thumbs-up fa-2x"></i></a>
            <% end %>
          <%= link_to downvote_path(@gif), class: "downvotes", method: :post do %>
            <i class="fas fa-thumbs-down fa-2x"></i>
            <% end %>

        <% end %>
      <% end %>

      <% @gif.tags.each do |tag| %>
        <div class="tag"><%= tag.name %></div>
      <% end %>

      <p class="big-card-tag">#tags</p>


    </div>
  </div>


  <div class="container-info">
    <div class="info-content">
      <p>Gif ID:</p>
      <p>Upload Date:</p>
      <p>Created by:</p>
    </div>
    <div class="container-sign-options">

      <% if user_signed_in? %>
        <% if current_user.favorited_by_type('Gif').include?(@gif) %>
          <%= link_to "Unfavorite", unfavorite_path(@gif), class: "btn-purple", method: :post %>
        <% else %>
          <%= link_to "Favorite", favorite_path(@gif), class: "btn-purple", method: :post %>
        <% end %>
      <% end %>
      <a class="btn-blue">download</a>
      <a class="btn-white">inappropriate?</a>

    </div>
    <div class="embed-info" >

      <p>Embed URL</p>
      <div class="embed-bar">
        <%= form_tag search_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
          placeholder: "https://www.signhow.co/gifs/id"
          %>
        </div>
        <% end %>


      </div>
    <div class="container-icons">
      <a href="#"><i class="fa fa-facebook"></i></a>
      <a href="#"><i class="fa fa-twitter"></i></a>
      <a href="#"><i class="fa fa-instagram"></i></a>
      <a href="#"><i class="fa fa-linkedin"></i></a>
      <a href="#"><i class="fa fa-envelope"></i></a>
    </div>

    <div class="container-sign-options">
      <div class</div>
      <% if user_signed_in? %>
        <% if @gif.user_id == current_user.id %>
          <%= link_to "Delete", gif_path, class: "btn-delete", method: :delete, data: { confirm: 'Are you sure you want to delete this gif?' } %>
          <%= link_to "Edit", edit_gif_path(@gif), class: "btn-white" %>
        <% end %>
      <% end %>
    </div>

  </div>

</section>

<% @gifs.each do |gif| %>
  <o><%= gif.title %></o>
  <p><%= gif.language %></p>
  <p><%= cl_image_tag gif.file %></p>
  <% gif.tag_list.each do |tag| %>
    <div class="tag"><%= tag %></div>
  <% end %>
<% end  %>

</div>

