
<div class="container">
  <div class="row">
    <div class="col col-xs-12 col-sm-4 col-md-4 col-sm-offset-4">
      <div class="search">
        <%= form_tag search_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
          placeholder: "Search by Word or Phrase"
          %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<section class="container">



  <div class="container-big-card">
    <div class="big-card">
      <%= cl_image_tag @gif.file, class: "big-card-gif" %>
      <h4 class="big-card-word"><b><%= @gif.title %></b></h4>
      <br>
      <p class="big-card-language"><%= @gif.language %></p>
      <p class="big-card-tag">#tags</p>
      <% if user_signed_in? %>
      <% if @gif.user_id == current_user.id %>
      <%= link_to "Delete GIF", gif_path, method: :delete, data: { confirm: 'Are you sure you want to delete this gif?' } %>
      <%= link_to "Edit GIF", edit_gif_path(@gif) %>
      <% end %>

      <% end %>
      <% if user_signed_in? %>
      <% if current_user.favorited_by_type('Gif').include?(@gif) %>
      <%= button_to "Unfavorite", unfavorite_path(@gif), method: :post %>
      <% else %>
      <%= button_to "Favorite", favorite_path(@gif), method: :post %>
      <% end %>
      <% end %>
    </div>
  </div>


  <div class="container-info">
    <div class="info-content">
      <p>Gif ID:</p>
      <p>Upload Date:</p>
      <p>Created by:</p>
    </div>


</section>





