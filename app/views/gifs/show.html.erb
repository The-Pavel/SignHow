
<div class="container">
  <div class="row">
    <div class="col col-xs-12 col-sm-4 col-md-4 col-sm-offset-4">
      <div class="search">
        <%= form_tag search_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
          placeholder: "Search by Word or Phrase"
          %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<section class="container">


  <div class="container-big-card">
    <div class="big-card">
      <%= cl_image_tag @gif.file, class: "big-card-gif" %>
      <h4 class="big-card-word"><b><%= @gif.title %></b></h4>
      <br>
      <p class="big-card-language"><%= @gif.language %></p>

      <p class="upvotes">Upvotes: <%= @gif.get_upvotes.size %></p>
      <p class="downvotes">Downvotes: <%= @gif.get_downvotes.size %></p>

      <% @gif.tags.each do |tag| %>
        <div class="tag"><%= tag.name %></div>
      <% end %>

      <p class="big-card-tag">#tags</p>
      <% if user_signed_in? %>
        <% if @gif.user_id == current_user.id %>
          <%= link_to "Delete GIF", gif_path, method: :delete, data: { confirm: 'Are you sure you want to delete this gif?' } %>
          <%= link_to "Edit GIF", edit_gif_path(@gif) %>
        <% end %>
      <% end %>
      <% if user_signed_in? %>
        <% if current_user.favorited_by_type('Gif').include?(@gif) %>
          <%= button_to "Unfavorite", unfavorite_path(@gif), method: :post %>
        <% else %>
          <%= button_to "Favorite", favorite_path(@gif), method: :post %>
        <% end %>
        <% if current_user.voted_up_on? @gif %>
          <%= button_to "Downvote", downvote_path(@gif), method: :post %>
        <% elsif current_user.voted_down_on? @gif %>
          <%= button_to "Upvote", upvote_path(@gif), method: :post %>
        <% else  %>
          <%= button_to "Upvote", upvote_path(@gif), method: :post %>
          <%= button_to "Downvote", downvote_path(@gif), method: :post %>
        <% end %>
      <% end %>
    </div>
  </div>


  <div class="container-info">
    <div class="info-content">
      <p>Gif ID:</p>
      <p>Upload Date:</p>
      <p>Created by:</p>
    </div>
    <div class="container-sign-options">

      <a class="btn-purple">favorite</a>
      <a class="btn-blue">download</a>
      <a class="btn-white">inappropriate?</a>

    </div>
    <div class="embed-info" >

      <p>Embed URL</p>
      <div class="embed-bar">
        <%= form_tag search_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
          placeholder: "placeholder for URL Later"
          %>
        </div>
        <% end %>


      </div>
    <div class="container-icons">
      <a href="#"><i class="fa fa-facebook"></i></a>
      <a href="#"><i class="fa fa-twitter"></i></a>
      <a href="#"><i class="fa fa-instagram"></i></a>
      <a href="#"><i class="fa fa-linkedin"></i></a>
      <a href="#"><i class="fa fa-envelope"></i></a>
    </div>

  </div>

</section>

<% @gifs.each do |gif| %>
  <o><%= gif.title %></o>
  <p><%= gif.language %></p>
  <p><%= cl_image_tag gif.file %></p>
  <% gif.tag_list.each do |tag| %>
    <div class="tag"><%= tag %></div>
  <% end %>
<% end  %>








