
<div class="container">
  <div class="row">
    <div class="col col-xs-12 col-sm-4 col-md-4 col-sm-offset-4">
      <div class="search">
        <%= form_tag search_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
          placeholder: "Search by Word or Phrase"
          %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col col-xs-12 col-sm-12 col-md-4">


      <div class="card">
        <%= cl_image_tag @gif.file, class: "gif" %>
        <h4 class="word"><b><%= @gif.title %></b></h4>
        <br>
        <p class="language"><%= @gif.language %></p>
        <p>Upvotes: <%= @gif.get_upvotes.size %></p>
        <p>Downvotes: <%= @gif.get_downvotes.size %></p>
          <% @gif.tags.each do |tag| %>
            <div class="tag"><%= tag.name %></div>
          <% end %>
        <% if user_signed_in? %>
          <% if @gif.user_id == current_user.id %>
            <%= link_to "Delete GIF", gif_path, method: :delete, data: { confirm: 'Are you sure you want to delete this gif?' } %>
            <% end %>
            <% if @gif.user_id == current_user.id %>
              <%= link_to "Edit GIF", edit_gif_path(@gif) %>
            <% end %>
        <% end %>
      </div>

    </div>
    <div class="container-info">
      <p>Gif ID:</p>
      <p>Upload Date:</p>
      <p>Created by:</p>
    </div>

  </div>
</div>



<h1><%= @gif.title %></h1>
<p><%= @gif.language %></p>
<p><%= cl_image_tag @gif.file, height: 300, width: 275, crop: :fill %></p>
<% if user_signed_in? %>
  <% if @gif.user_id == current_user.id %>
    <%= link_to "Delete GIF", gif_path, method: :delete, data: { confirm: 'Are you sure you want to delete this gif?' } %>
    <%= link_to "Edit GIF", edit_gif_path(@gif) %>
  <% end %>
<% else  %>
  <%= link_to "Sign up to add a sign", user_registration_path %>
<% end %>
<% if user_signed_in? %>
  <% if current_user.favorited_by_type('Gif').include?(@gif) %>
    <%= button_to "Unfavorite", unfavorite_path(@gif), method: :post %>
  <% else %>
    <%= button_to "Favorite", favorite_path(@gif), method: :post %>
  <% end %>
  <% if current_user.voted_up_on? @gif %>
    <%= button_to "Downvote", downvote_path(@gif), method: :post %>
  <% elsif current_user.voted_down_on? @gif %>
    <%= button_to "Upvote", upvote_path(@gif), method: :post %>
  <% else  %>
    <%= button_to "Upvote", upvote_path(@gif), method: :post %>
    <%= button_to "Downvote", downvote_path(@gif), method: :post %>
  <% end %>
<% end %>

