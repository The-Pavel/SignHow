<div class="row">
  <% @gifs.each do |gif| %>
  <div class="col col-xs-12 col-sm-4 col-md-4">

    <%= link_to gif_path(gif) do %>
    <div class="card">
      <%= cl_image_tag gif.file, class: "gif" %>
        <h4 class="word"><b><%= gif.title %></b></h4>
        <br>
        <p class="language"><%= gif.language %></p>

        <% gif.tag_list.each do |tag| %>
          <div class="tag"><%= tag %></div>
        <% end %>
        <p class="upvotes">Upvotes: <%= gif.get_upvotes.size %></p>
        <p class="downvotes">Downvotes: <%= gif.get_downvotes.size %></p>
      <% end %>
    </div>
  <% end %>
  </div>
</div>
